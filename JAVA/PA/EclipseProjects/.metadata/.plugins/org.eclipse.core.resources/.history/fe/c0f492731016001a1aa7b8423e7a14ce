			case 1:
				System.out.println("Playlist Creator");
				System.out.println("\nHow many songs will you add?");
				capacidade = scan.nextInt();
				playlist = new Playlist[capacidade];
				break;
			case 2:
				
				break;
			default:
				break;
			}
		}
	}

}
